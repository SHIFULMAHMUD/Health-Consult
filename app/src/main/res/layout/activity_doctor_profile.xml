<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".doctor.DoctorProfileActivity"
android:background="#D3D3D3"
android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_layout">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorAccent"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_layout"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <LinearLayout
                    android:background="@drawable/gradientbackground"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="45dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/doc_profile_image"
                        android:layout_width="180dp"
                        android:background="@drawable/doctor"
                        android:layout_height="180dp"
                        />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/doc_profile_name"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="22sp"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_designation"
                        android:src="@drawable/tool"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/image_designation"
                        android:id="@+id/heading_designation"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Designation"/>
                    <TextView
                        android:layout_toRightOf="@+id/image_designation"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading_designation"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_designation"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout
                    android:paddingLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_speciality"
                        android:src="@drawable/tool"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:id="@+id/heading_speciality"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@+id/image_speciality"
                        android:text="Specialist"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_specialist"
                        android:textColor="@android:color/black"
                        android:layout_below="@+id/heading_speciality"
                        android:layout_toRightOf="@+id/image_speciality"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_qualification"
                        android:src="@drawable/graduation"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/image_qualification"
                        android:id="@+id/heading_qualification"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Qualification"/>
                    <TextView
                        android:layout_toRightOf="@+id/image_qualification"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading_qualification"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_qualification"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_cell"
                        android:src="@drawable/ic_phone_black_24dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/image_cell"
                        android:id="@+id/heading_cell"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Phone"/>
                    <TextView
                        android:layout_toRightOf="@+id/image_cell"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/heading_cell"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_cell"
                        android:textColor="@android:color/black"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout
                    android:paddingLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_mail"
                        android:src="@drawable/ic_email_black_24dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:id="@+id/heading_mail"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@+id/image_mail"
                        android:text="Email"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_email"
                        android:textColor="@android:color/black"
                        android:layout_below="@+id/heading_mail"
                        android:layout_toRightOf="@+id/image_mail"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/image_location"
                        android:src="@drawable/ic_location_on_black_24dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:layout_toRightOf="@+id/image_location"
                        android:id="@+id/heading_location"
                        android:text="Location"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_toRightOf="@+id/image_location"
                        android:layout_below="@+id/heading_location"
                        android:paddingLeft="30dp"
                        android:id="@+id/doc_profile_location"
                        />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
            </LinearLayout>

            <Button
                android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                android:id="@+id/doc_profile_update_btn"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                />
        </LinearLayout>
    </RelativeLayout>



</ScrollView>