<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:id="@+id/relative_list"
android:padding="10dp"
android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zeroLayout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/doc">
        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Name:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_doc_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#99A1AC"
        android:layout_below="@+id/zeroLayout"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLayout"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/zeroLayout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/tool">
        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="Designation:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_doc_designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#99A1AC"
        android:layout_below="@+id/firstLayout"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLayout"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/firstLayout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/graduation">
        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Qualification:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txt_doc_qualification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>